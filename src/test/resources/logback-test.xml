<?xml version="1.0" encoding="UTF-8" ?>

<configuration scan="true" scanPeriod="5 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate" level="INFO"/>
    <!--<logger name="org.hibernate.engine.jdbc.batch.internal" level="DEBUG"/>-->
    <!--<logger name="org.hibernate.engine.transaction.internal.jdbc.JdbcTransaction" level="DEBUG"/>-->
    <!--<logger name="org.hibernate.engine.engine.jdbc.internal.LogicalConnectionImpl" level="DEBUG"/>-->
    <logger name="org.hibernate.cfg.SettingsFactory" level="INFO"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <root>
        <level value="WARN"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
